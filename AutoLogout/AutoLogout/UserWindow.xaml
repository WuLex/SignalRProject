<Window x:Class="AutoLogout.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoLogout"
        mc:Ignorable="d"
        Title="聊天应用" Height="550" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <TextBox x:Name="chatTextBox" Width="580" Height="280" Margin="0,10,0,0" IsReadOnly="True" Background="AliceBlue" />
        <TextBox x:Name="inputTextBox" Width="448" Height="30" Margin="10,10,0,0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">
            <Button Content="发送" Width="115" Height="30" Margin="10,10,0,0" Click="SendMessageButton_Click" />
            <!--<Button Content="Logout" Width="115" Height="30" Margin="10,10,0,0" Click="LogoutButton_Click" />-->
        </StackPanel>
    </StackPanel>
</Window>
